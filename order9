import java.io.Externalizable;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInput;
import java.io.ObjectInputStream;
import java.io.ObjectOutput;
import java.io.ObjectOutputStream;

public class Tester {
   public static void main(String[] args) {

      Order o = new Order();
      o.productName = "Frooti";
      o.orderId = 3;
      try (
         FileOutputStream fileOut = new FileOutputStream("test.txt");
         ObjectOutputStream out = new ObjectOutputStream(fileOut);
      ) {
         out.writeObject(o);
      }catch (IOException i) {
         System.out.println(i.getMessage());
      }
      try (
         FileInputStream fileIn = new FileInputStream("test.txt");
         ObjectInputStream in = new ObjectInputStream(fileIn);
      ) {
         o = (Order)in.readObject();
         System.out.println(o.productName);
         System.out.println(o.orderId);
      } catch (IOException i) {
         System.out.println(i.getMessage());
      } catch (ClassNotFoundException o1) {
         System.out.println(o1.getMessage());
      }
   }
}

class Order implements Externalizable {
   public Order(){}
   int orderId;
   String productName;
   String customerName;
   public void writeExternal(ObjectOutput out) throws IOException {
      out.writeObject(productName);
      out.writeInt(orderId);
   }
   public void readExternal(ObjectInput in) throws IOException,
   ClassNotFoundException {
      productName = (String)in.readObject();
      orderId = in.readInt();
   }
}
